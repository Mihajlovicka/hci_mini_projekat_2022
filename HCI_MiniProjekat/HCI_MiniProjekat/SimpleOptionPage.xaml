<Page x:Class="HCI_MiniProjekat.SimpleOptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_MiniProjekat"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SimpleOptionPage">

    <Grid>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">
            <Label Padding="10" FontSize="25" Margin="20" HorizontalAlignment="Center">Izaberite prikaz</Label>

            <Button Name="btn_table" Padding="10" FontSize="20" Margin="20" Click="Show_Table" Background="White">Tabela</Button>
            <Button Name="btn_linegraph" Padding="10" FontSize="20" Margin="20" Click="Show_LineGraph" Background="White">Linijski grafikon</Button>
            <Button Name="btn_piechart" Padding="10" FontSize="20" Margin="20" Click="Show_PieChart" Background="White">Kruzni grafikon</Button>
        </StackPanel>
    </Grid>
</Page>
